
@model IEnumerable<Domain.UsuarioReservaView>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ReservaList</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.11.3/datatables.min.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.11.3/datatables.min.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

</head>
<body>

    <br />
    <table id="idList" class="table table-striped table-condensed" cellspacing="0">
        <thead>
            <tr>
                <th>TipoIdentificacion</th>
                <th>Identificacion</th>
                <th>Nombres</th>
                <th>Apellidos</th>
                <th>Email</th>
                <th>Hotel</th>
                <th>FechaReserva</th>
                <th>EstadoReserva</th>
            </tr>

        </thead>
        <tbody>
            @if (ViewBag.List != null)
            {
                foreach (var item in ViewBag.List)
                {
                    <tr id="row_@item.Identificacion">
                        <td>@item.TipoIdentificacion</td>
                        <td>@item.Identificacion</td>
                        <td>@item.Nombres</td>
                        <td>@item.Apellidos</td>
                        <td>@item.Email</td>
                        <td>@item.HotelView</td>
                        <td>@item.FechaReserva</td>
                        <td>
                            <a asp-action="EditUsuarioReserva" asp-route-id="@item.Identificacion" onclick="mostrar()" class="btn btn-primary">
                                Editar
                                <i class="glyphicon glyphicon-pencil"></i>
                            </a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <script>
        $(document).ready(function () {
            $('#idList').DataTable();
            $('.dataTables_length').addClass('bs-select');
        });

        function mostrar() {
            swal({
                title: 'Registro Actualizado',
                icon: 'success'
            })
        }
    </script>
</body>
</html>
